/**
 * Variables
 * ======================================================================== */

block_storage('__stem__grid-settings', {
        columns:     24,
        gutter:      20px,
        error:       5,
        container:   {
                n:  null,
                xs:  Responsive.bp.xs,
                sm:  Responsive.bp.sm,
                md:  Responsive.bp.md,
                lg:  Responsive.bp.lg,
            },
        width:       Responsive.bp.lg,

        space:       6px,

        size: {
            none:    0
            sm:      2
            md:      3
            lg:      5
            xl:      8
            giant:   12
            mega:    18
            giga:    24
        }

        respond:     ('n' 'xs' 'sm' 'md' 'lg')
        responsive:  true
    }, default:true)


/**
 * Mixins
 * ======================================================================== */

grid-settings(data=false, base=false, fallback=false, default=false)
    temp = block_storage('__stem__grid-settings', data, base, fallback, default=false)

    return temp